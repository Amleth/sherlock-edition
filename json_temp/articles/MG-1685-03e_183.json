":"i","#":{"value":"Que luy fit ce petit Chien,","id":"/div/quote/#[41]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Elle fut trois mois si sage,","id":"/div/quote/#[41]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Qu’on vit qu’elle n’aimoit rien.","id":"/div/quote/#[41]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[42]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":"Enfin elle fut séduite,","id":"/div/quote/#[43]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Et par des discours flateurs","id":"/div/quote/#[43]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Elle manqua de conduite,","id":"/div/quote/#[43]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Et prodigua ses faveurs.","id":"/div/quote/#[43]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[44]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":"Comme elle faisoit paroistre","id":"/div/quote/#[45]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Publiquement son ardeur,","id":"/div/quote/#[45]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"On cessa de la connoistre","id":"/div/quote/#[45]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Pour une Chienne d’honneur.","id":"/div/quote/#[45]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[46]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":"Peut-estre qu’en son bas âge","id":"/div/quote/#[47]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Elle ne connoissoit pas.","id":"/div/quote/#[47]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Que d’un grand libertinage","id":"/div/quote/#[47]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Il faut éviter le pas.","id":"/div/quote/#[47]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[48]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":"On luy fit des remontrances","id":"/div/quote/#[49]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Dans cet abandonnement ;","id":"/div/quote/#[49]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"De perdre les apparences","id":"/div/quote/#[49]/lg/l[2]/#"}},{"@r
{"div":{"@xmlns":"http://www.tei-c.org/ns/1.0","@type":"article","@xml:id":"MG-1694-07_224","@resp":"wordpro","head":{"value":"[Les Petits Maistres]","id":"/div/head"},"bibl":{"title":{"value":"Mercure galant","id":"/div/bibl/title"},"#":{"value":", juillet 1694 [tome 7], p. 224-226.","id":"/div/bibl/#"}},"p":{"#1":{"value":"Les Vers que vous allez lire, sont de M","id":"/div/p/#1"},"hi":{"@rend":"sup","#":{"value":"r","id":"/div/p/hi/#"}},"#2":{"value":" de Senecé, premier Valet de Chambre de la feuë Reine.","id":"/div/p/#2"}},"quote":{"#":[{"label":{"#1":{"value":"LES PETITS MAISTRES,","id":"/div/quote/#[0]/label/#1"},"lb":{},"#2":{"value":"A M","id":"/div/quote/#[0]/label/#2"},"hi":{"@rend":"sup","#":{"value":"r","id":"/div/quote/#[0]/label/hi/#"}},"#3":{"value":" de Bellocq.","id":"/div/quote/#[0]/label/#3"}}},{"lg":{"l":[{"@rend":"i","#":{"value":"Vraiment, vous estes fort honneste,","id":"/div/quote/#[1]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Bellocq, &amp; vous avez raison","id":"/div/quote/#[1]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"De nous avoir lavé la teste","id":"/div/quote/#[1]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"En Enfans de bonne Maison.","id":"/div/quote/#[1]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[2]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Depuis le trépas de Moliere,","id":"/div/quote/#[3]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"De nostre merite entestez,","id":"/div/quote/#[3]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Sans jugement &amp; sans lumiere,","id":"/div/quote/#[3]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Nous devenions Enfans gâtez.","id":"/div/quote/#[3]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[4]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Tel qui nous aime, nous châtie ;","id":"/div/quote/#[5]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Nous devons beaucoup à ce soin.","id":"/div/quote/#[5]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"D’un Professeur en modestie","id":"/div/quote/#[5]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Nous avions un fort grand besoin.","id":"/div/quote/#[5]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[6]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Vous meritez qu’on vous écoute,","id":"/div/quote/#[7]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Vos traits penetrent jusqu’au vif,","id":"/div/quote/#[7]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Et nous obligeront sans doute,","id":"/div/quote/#[7]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"A prendre un air moins décisif.","id":"/div/quote/#[7]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[8]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" La Poësie &amp; la Musique,","id":"/div/quote/#[9]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Et leurs Eleves outragez,","id":"/div/quote/#[9]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Auront un destin moins inique,","id":"/div/quote/#[9]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Et libre de nos préjugez.","id":"/div/quote/#[9]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[10]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Pour vos avis de consequence,","id":"/div/quote/#[11]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Dont le profit est singulier,","id":"/div/quote/#[11]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Recevez la reconnoissance","id":"/div/quote/#[11]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"D’un remerciment Cavalier.","id":"/div/quote/#[11]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[12]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Mais ne croyez pas pouvoir faire","id":"/div/quote/#[13]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Qu’aprés nous avoir corrigez","id":"/div/quote/#[13]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"De gens de nostre caractere,","id":"/div/quote/#[13]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Les temps à venir soient purgez.","id":"/div/quote/#[13]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[14]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" C’est une esperance inutile,","id":"/div/quote/#[15]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Et pour vous le dire en deux mots,","id":"/div/quote/#[15]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"La Cour, aussi-bien que la Ville,","id":"/div/quote/#[15]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Aura toujours de jeunes sots.","id":"/div/quote/#[15]/lg/l[3]/#"}}]}}]}}}
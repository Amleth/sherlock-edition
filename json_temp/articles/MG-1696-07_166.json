,{"lg":{"l":[{"@rend":"i","#":{"value":" Les livres saints &amp; l’oraison","id":"/div/quote[0]/#[13]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Faisoient ses plus cheres delices.","id":"/div/quote[0]/#[13]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Ses Serviteurs dans sa maison","id":"/div/quote[0]/#[13]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"L’imitoient en ses exercices.","id":"/div/quote[0]/#[13]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote[0]/#[14]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Le meilleur d’entre les Parens,","id":"/div/quote[0]/#[15]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Qui pour les siens toujours s’applique,","id":"/div/quote[0]/#[15]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Prend moins de soin de ses Enfans,","id":"/div/quote[0]/#[15]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Qu’elle n’en prit d’un Domestique.","id":"/div/quote[0]/#[15]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote[0]/#[16]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Du Jeu, du Bal, de l’Opera","id":"/div/quote[0]/#[17]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Elle s’interdisoit l’usage.","id":"/div/quote[0]/#[17]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Son exemple condamnera","id":"/div/quote[0]/#[17]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Ceux qui n’en ont pas le courage.","id":"/div/quote[0]/#[17]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote[0]/#[18]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Sans fiel, sans trouble, sans chagrin,","id":"/div/quote[0]/#[19]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Libre de toute inquietude,","id":"/div/quote[0]/#[19]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Son salut, sa derniere fin","id":"/div/quote[0]/#[19]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Faisoient sa principale étude.","id":"/div/quote[0]/#[19]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote[0]/#[20]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Elle joüit en ce bas lieu","id":"/div/quote[0]/#[21]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"D’une paix tranquille &amp; profonde.","id":"/div/quote[0]/#[21]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Son cœur toujours cheri de Dieu,","id":"/div/quote[0]/#[21]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Le fut aussi de tout le monde.","id":"/div/quote[0]/#[21]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote[0]/#[22]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":"Que si les Anges dans les Cieux","id":"/div/quote[0]/#[23]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Estoient susceptibles d’envie,","id":"/div/quote[0]/#[23]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Je dirois que ces envieux","id":"/div/quote[0]/#[23]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Ont conspiré contre sa vie.","id":"/div/quote[0]/#[23]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote[0]/#[24]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Avec ces Esprits bienheureux","id":"/div/quote[0]/#[25]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Elle avoit tant de ressemblance,","id":"/div/quote[0]/#[25]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Que la prenant pour l’un a’entr’eux,","id":"/div/quote[0]/#[25]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"On admiroit son innocence,","id":"/div/quote[0]/#[25]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote[0]/#[26]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Sa vertu plus pure que l’or,","id":"/div/quote[0]/#[27]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Fit voir, en tous lieux reverée,","id":"/div/quote[0]/#[27]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Que la terre avoit un tresor","id":"/div/quote[0]/#[27]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Qui n’estoit dû qu’à l’Empirée.","id":"/div/quote[0]/#[27]/lg/l[3]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote[0]/#[28]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Par l’ordre qui luy fut prescrit,","id":"/div/q
{"div":{"@xmlns":"http://www.tei-c.org/ns/1.0","@type":"article","@xml:id":"MG-1690-04_057","@resp":"wordpro","head":{"value":"[Ode]","id":"/div/head"},"bibl":{"title":{"value":"Mercure galant","id":"/div/bibl/title"},"#":{"value":", avril 1690 [tome 4], p. 57-60.","id":"/div/bibl/#"}},"quote":{"#":[{"label":{"#":[{"#":{"value":"RESPONSE AUX VERS","id":"/div/quote/#[0]/label/#[0]/#"}},{"lb":{}},{"#":{"value":"de M","id":"/div/quote/#[0]/label/#[2]/#"}},{"hi":{"@rend":"sup","#":{"value":"r","id":"/div/quote/#[0]/label/#[3]/hi/#"}}},{"#":{"value":" le Pays.","id":"/div/quote/#[0]/label/#[4]/#"}},{"lb":{}},{"#":{"value":"ODE.","id":"/div/quote/#[0]/label/#[6]/#"}}]}},{"lg":{"l":[{"@rend":"i","#":{"value":"Toy, qui des Exploits de Loüis","id":"/div/quote/#[1]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Jour &amp; nuit occupes tes veilles,","id":"/div/quote/#[1]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Illustre &amp; fameux le Pays,","id":"/div/quote/#[1]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Qui produis toujours des merveilles.","id":"/div/quote/#[1]/lg/l[3]/#"}},{"@rend":"i","#":{"value":"Que j’aime ton ressentiment,","id":"/div/quote/#[1]/lg/l[4]/#"}},{"@rend":"i","#":{"value":"Et que j’applaudis au tourment","id":"/div/quote/#[1]/lg/l[5]/#"}},{"@rend":"i","#":{"value":"Que te donne aujourd’huy l’envie","id":"/div/quote/#[1]/lg/l[6]/#"}},{"@rend":"i","#":{"value":"De n’avoir pas mis comme moy,","id":"/div/quote/#[1]/lg/l[7]/#"}},{"@rend":"i","#":{"value":"Ton bien sous le nom de ton Roy,","id":"/div/quote/#[1]/lg/l[8]/#"}},{"@rend":"i","#":{"value":"Ny sur une si belle Vie !","id":"/div/quote/#[1]/lg/l[9]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[2]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Apprens, agreable Envieux,","id":"/div/quote/#[3]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Que depuis que j’ay cette rente,","id":"/div/quote/#[3]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Je ne croy pas que sous les Cieux","id":"/div/quote/#[3]/lg/l[2]/#"}},{"hi":{"@rend":"i","#":{"value":"Un homme ait l’ame plus ","id":"/div/quote/#[3]/lg/l[3]/hi/#"},"seg":{"value":"contente.","id":"/div/quote/#[3]/lg/l[3]/hi/seg"}}},{"@rend":"i","#":{"value":"Chaque jour me promet du bien,","id":"/div/quote/#[3]/lg/l[4]/#"}},{"@rend":"i","#":{"value":"Et sans estre Epicurien","id":"/div/quote/#[3]/lg/l[5]/#"}},{"@rend":"i","#":{"value":"Le sort n’a rien qui m’importune.","id":"/div/quote/#[3]/lg/l[6]/#"}},{"@rend":"i","#":{"value":"Gros &amp; gras, je ris &amp; je boy,","id":"/div/quote/#[3]/lg/l[7]/#"}},{"@rend":"i","#":{"value":"Et je me vante que le Roy","id":"/div/quote/#[3]/lg/l[8]/#"}},{"@rend":"i","#":{"value":"Sera l’Auteur de ma fortune.","id":"/div/quote/#[3]/lg/l[9]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[4]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" On ne parle dans tout Paris","id":"/div/quote/#[5]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Que du bonheur que je m’attire ;","id":"/div/quote/#[5]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Je n’ay jamais servi Loüis","id":"/div/quote/#[5]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Contre l’Espagne ny l’Empire.","id":"/div/quote/#[5]/lg/l[3]/#"}},{"@rend":"i","#":{"value":"Je n’ay point couru de hazards,","id":"/div/quote/#[5]/lg/l[4]/#"}},{"@rend":"i","#":{"value":"Non pas mesme vû les rampars","id":"/div/quote/#[5]/lg/l[5]/#"}},{"@rend":"i","#":{"value":"Des Places que l’on a conquises.","id":"/div/quote/#[5]/lg/l[6]/#"}},{"@rend":"i","#":{"value":"Qu’ay je donc fait ? J’ay prié Dieu,","id":"/div/quote/#[5]/lg/l[7]/#"}},{"@rend":"i","#":{"value":"Et mis mon argent en bon lieu,","id":"/div/quote/#[5]/lg/l[8]/#"}},{"@rend":"i","#":{"value":"Voilà les peines que j’ay prises.","id":"/div/quote/#[5]/lg/l[9]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[6]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Le Pays, pour avoir l’honneur","id":"/div/quote/#[7]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Des Rentes que je me suis faites,","id":"/div/quote/#[7]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Que tu donnerois de bon cœur","id":"/div/quote/#[7]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Tes amours &amp; tes amourettes !","id":"/div/quote/#[7]/lg/l[3]/#"}},{"@rend":"i","#":{"value":"C’est dans vos Ouvrages divers,","id":"/div/quote/#[7]/lg/l[4]/#"}},{"@rend":"i","#":{"value":"Que vous autres faiseurs de Vers,","id":"/div/quote/#[7]/lg/l[5]/#"}},{"@rend":"i","#":{"value":"Montrez du zele &amp; de la joye","id":"/div/quote/#[7]/lg/l[6]/#"}},{"@rend":"i","#":{"value":"Au Heros qui nous rend heureux,","id":"/div/quote/#[7]/lg/l[7]/#"}},{"@rend":"i","#":{"value":"Mais moy, pour luy marquer mes vœux,","id":"/div/quote/#[7]/lg/l[8]/#"}},{"@rend":"i","#":{"value":"Je m’explique en belle monnoye.","id":"/div/quote/#[7]/lg/l[9]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[8]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Du plaisir de me voir Auteur,","id":"/div/quote/#[9]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"Je n’ay point l’ame embarassée,","id":"/div/quote/#[9]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Et je vois que tout mon bonheur","id":"/div/quote/#[9]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"Me vient d’une seule pensée.","id":"/div/quote/#[9]/lg/l[3]/#"}},{"@rend":"i","#":{"value":"En bon &amp; fidelle Sujet,","id":"/div/quote/#[9]/lg/l[4]/#"}},{"@rend":"i","#":{"value":"Je n’ay que Loüis pour objet,","id":"/div/quote/#[9]/lg/l[5]/#"}},{"@rend":"i","#":{"value":"Toujours prest à luy rendre hommage,","id":"/div/quote/#[9]/lg/l[6]/#"}},{"@rend":"i","#":{"value":"Et de mes jours &amp; de mon bien,","id":"/div/quote/#[9]/lg/l[7]/#"}},{"@rend":"i","#":{"value":"Je ne luy refuseray rien ;","id":"/div/quote/#[9]/lg/l[8]/#"}},{"@rend":"i","#":{"value":"Que puis-je faire davantage ?","id":"/div/quote/#[9]/lg/l[9]/#"}}]}},{"ab":{"@type":"ornament","#":{"value":"***","id":"/div/quote/#[10]/ab/#"}}},{"lg":{"l":[{"@rend":"i","#":{"value":" Mais toy, qui de tes Vers charmans,","id":"/div/quote/#[11]/lg/l[0]/#"}},{"@rend":"i","#":{"value":"En tous lieux répans l’harmonie,","id":"/div/quote/#[11]/lg/l[1]/#"}},{"@rend":"i","#":{"value":"Et joins mille autres agrémens","id":"/div/quote/#[11]/lg/l[2]/#"}},{"@rend":"i","#":{"value":"A la beauté de ton genie ;","id":"/div/quote/#[11]/lg/l[3]/#"}},{"@rend":"i","#":{"value":"Le Pays, éleve ta voix,","id":"/div/quote/#[11]/lg/l[4]/#"}},{"@rend":"i","#":{"value":"Et chante le plus grand des Rois,","id":"/div/quote/#[11]/lg/l[5]/#"}},{"@rend":"i","#":{"value":"Que respectent les destinées,","id":"/div/quote/#[11]/lg/l[6]/#"}},{"@rend":"i","#":{"value":"Tandis qu’admirant ses vertus","id":"/div/quote/#[11]/lg/l[7]/#"}},{"@rend":"i","#":{"value":"Je vois croistre mes revenus,","id":"/div/quote/#[11]/lg/l[8]/#"}},{"@rend":"i","#":{"value":"Et la gloire de ses années.","id":"/div/quote/#[11]/lg/l[9]/#"}}]}}]}}}